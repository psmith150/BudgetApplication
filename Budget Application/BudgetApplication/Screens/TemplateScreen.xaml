<UserControl x:Class="BudgetApplication.Screens.TemplateScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetApplication.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=local:TemplateViewModel}">
    <StackPanel>
        <Label Content="Status:" />
        <TextBlock Text="{Binding Message}" />
        <Button Content="Start Long Task" Command="{Binding TestButtonCommand}"  />
        <Button Content="Go to Chart Screen" Command="{Binding NavigateToChartCommand}"  />
        <Button Content="Open Settings" Command="{Binding OpenSettingsCommand}"  />
        <Button Content="Ask Question" Command="{Binding AskQuestionCommand}" />
    </StackPanel>
</UserControl>
